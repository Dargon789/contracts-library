{
  "include": ["./scripts"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "importHelpers": false,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "target": "ES6"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "importHelpers": false
    }
  }
}
